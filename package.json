{
    "scripts": {
        "typescript:validate": "tsc --project ./src/apollo-builder --noEmit",
        "typescript:validate:dev-app": "tsc --project ./src/dev-app --noEmit",
        "lint:ts": "tslint --project ./src/dev-app/tsconfig.json",
        "lint": "yarn run lint:ts",
        "test": "yarn run typescript:validate && yarn run typescript:validate:dev-app && yarn run lint && yarn run test:once",
        "test:coverage": "jest --coverage --config ./configs/jest.config.json",
        "test:once": "jest --config ./configs/jest.config.json",
        "test:once:vso": "jest --config ./configs/jest.config.vso.json",
        "test:watch": "jest --watch --config ./jest.config.json",
        "test:update": "jest -u --config ./configs/jest.config.json"
    },
    "devDependencies": {
        "@types/jest": "^19.2.2",
        "jest": "^19.0.2",
        "jest-environment-node-debug": "^2.0.0",
        "rxjs": "^5.3.0",
        "ts-jest": "^19.0.10",
        "ts-node": "^3.0.2",
        "typescript": "^2.2.2"
    }
}
